<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sudoku.ui.SudokuFXController">
   <top>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER" spacing="20.0" styleClass="header">
               <children>
                  <Label styleClass="title" text="SUDOKU GAME" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="15.0" styleClass="controls">
               <children>
                  <ComboBox fx:id="difficultyCombo" promptText="Select Difficulty" />
                  <Button fx:id="newGameButton" onAction="#handleNewGame" styleClass="primary-button" text="New Game" />
                  <Button fx:id="solveButton" onAction="#handleSolve" text="Solve" />
                  <Button fx:id="checkButton" onAction="#handleCheck" text="Check" />
                  <Button fx:id="resetButton" onAction="#handleReset" text="Reset" />
                  <Button fx:id="hintButton" onAction="#handleHint" text="Hint" />
                  <Button fx:id="undoButton" onAction="#handleUndo" text="Undo" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0" styleClass="status-bar">
               <children>
                  <Label fx:id="timeLabel" text="Time: 00:00" />
                  <Label fx:id="movesLabel" text="Moves: 0" />
                  <Label fx:id="hintsLabel" text="Hints: 0" />
                  <Label fx:id="statusLabel" text="Status: Ready" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <GridPane fx:id="boardGrid" alignment="CENTER" styleClass="sudoku-board">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
               </children>
            </VBox>
            <VBox prefWidth="200.0" spacing="10.0">
               <children>
                  <Label styleClass="section-title" text="Messages" />
                  <TextArea fx:id="messageArea" editable="false" prefHeight="300.0" styleClass="message-area" wrapText="true" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>